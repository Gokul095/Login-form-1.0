doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="icon",type="image/ico", href="/images/logo.jpg")
        title #{title}
        link(rel="stylesheet", href="/css/style.css")
    body 
       .form-container
        h1 Join Us Today
        p Sign up now to become a member.
        form#frm(method="POST")
          p.errorMessage #{errorMessage} 
          .row
            input#name(type="text" required="" name="name" value=name)
            label Name
          .row
            input#email(type="text" required="" name="email" value=email)
            label Email
          .row
            input#username(type="text" required="" name="username" value=username)
            label Username
          .row
            input#password(type="password" required="" name="password" )
            label Password
          .row
            input#confirmPassword(type="password" required="" name="confirmPassword" )
            label Confirm Password
          .row
            button(type="submit") Sign Up 
        p Already a Member ? 
          a(href="/login") Login Here 
       script(src="/js/register.js", defer="")